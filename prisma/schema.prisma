generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  email    String  @unique
  name     String?
  password String

  role Role @default(USER)

  clients Client[] @relation("UserClients")

  @@map("user")
}

model Client {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  TIN         String @unique
  companyName String

  stocks         Stock[]
  registries     Registry[]
  orders         Order[]
  analytics      Analytics[]
  analyticOrders AnalyticOrder[]
  finances       Finance[]
  complaints     Complaint[]

  users User[] @relation("UserClients")

  @@map("client")
}

model Stock {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  warehouse    String
  nomenclature String
  article      String
  quantity     Int
  counterparty String?

  client    Client @relation(fields: [clientTIN], references: [TIN])
  clientTIN String @map("client_tin")

  @@index([clientTIN])
  @@index([createdAt])
  @@map("stock")
}

model Registry {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  branch          String
  orderType       String    @map("order_type")
  orderNumber     String    @map("order_number")
  kisNumber       String    @map("kis_number")
  unloadingDate   DateTime  @map("unloading_date")
  status          String
  counterparty    String
  acceptanceDate  DateTime  @map("acceptance_date")
  shipmentPlan    DateTime  @map("shipment_plan")
  packagesPlanned Int       @map("packages_planned")
  packagesActual  Int       @map("packages_actual")
  linesPlanned    Int       @map("lines_planned")
  linesActual     Int       @map("lines_actual")
  vehicleNumber   String?   @map("vehicle_number")
  driverName      String?   @map("driver_name")
  processingType  String?   @map("processing_type")
  departureDate   DateTime? @map("departure_date")

  client    Client @relation(fields: [clientTIN], references: [TIN])
  clientTIN String @map("client_tin")

  @@index([clientTIN])
  @@index([createdAt])
  @@index([shipmentPlan])
  @@index([unloadingDate])
  @@index([departureDate])
  @@map("registry")
}

model Order {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  branch          String
  orderType       String   @map("order_type")
  orderNumber     String   @map("order_number")
  kisNumber       String   @map("kis_number")
  exportDate      DateTime @map("export_date")
  shipmentDate    DateTime? @map("shipment_date")
  status          String
  packagesPlanned Int      @map("packages_planned")
  packagesActual  Int      @map("packages_actual")
  linesPlanned    Int      @map("lines_planned")
  linesActual     Int      @map("lines_actual")
  counterparty    String
  acceptanceDate  DateTime? @map("acceptance_date")

  client    Client @relation(fields: [clientTIN], references: [TIN])
  clientTIN String @map("client_tin")

  @@index([clientTIN])
  @@index([createdAt])
  @@index([acceptanceDate])
  @@index([exportDate])
  @@index([shipmentDate])
  @@map("order")
}

model Analytics {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  branch              String
  date                DateTime
  quantityByRequest   Int      @map("quantity_by_request")
  quantityByPlan      Int      @map("quantity_by_plan")
  quantityByFact      Int      @map("quantity_by_fact")
  quantityByDeparture Int      @map("quantity_by_departure")

  client    Client @relation(fields: [clientTIN], references: [TIN])
  clientTIN String @map("client_tin")

  @@unique([branch, clientTIN, date])
  @@index([clientTIN])
  @@index([date])
  @@map("analytics")
}

model AnalyticOrder {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  branch                String
  date                  DateTime
  quantityByPlannedDate Int      @map("quantity_by_planned_date")
  quantityByActualDate  Int      @map("quantity_by_actual_date")

  client    Client @relation(fields: [clientTIN], references: [TIN])
  clientTIN String @map("client_tin")

  @@unique([branch, clientTIN, date])
  @@index([clientTIN])
  @@index([date])
  @@map("analytic_order")
}

model Finance {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  branch         String
  counterparty   String
  date           DateTime
  orderNumber    String   @map("order_number")
  amount         Decimal  @db.Decimal(15, 2)
  status         String
  comment        String?
  completionDate DateTime? @map("completion_date")
  closingDate    DateTime? @map("closing_date")

  client    Client @relation(fields: [clientTIN], references: [TIN])
  clientTIN String @map("client_tin")

  @@index([clientTIN])
  @@index([date])
  @@index([completionDate])
  @@index([closingDate])
  @@map("finance")
}

model Complaint {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  branch          String
  client          String
  creationDate    DateTime @map("creation_date")
  complaintNumber String   @map("complaint_number")
  complaintType   String   @map("complaint_type")
  status          String
  confirmation    Boolean  @default(false)
  deadline        DateTime? @map("deadline")
  completionDate  DateTime? @map("completion_date")

  clientRelation Client @relation(fields: [clientTIN], references: [TIN])
  clientTIN      String @map("client_tin")

  @@index([clientTIN])
  @@index([creationDate])
  @@index([deadline])
  @@index([completionDate])
  @@map("complaint")
}

model ImportMetadata {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  importType      String   @unique // 'stock', 'registry', 'orders', 'clients', 'analytics', 'analytic_orders', 'finance', 'complaints'
  lastImportAt    DateTime @map("last_import_at")
  recordsImported Int      @map("records_imported")
  recordsUpdated  Int      @map("records_updated")
  recordsDeleted  Int      @map("records_deleted")
  recordsSkipped  Int      @map("records_skipped")
  errors          Int

  @@map("import_metadata")
}

enum Role {
  USER
  ADMIN
}
