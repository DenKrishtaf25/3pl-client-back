generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  email    String  @unique
  name     String?
  password String

  role Role @default(USER)

  clients Client[] @relation("UserClients")

  @@map("user")
}

model Client {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  TIN         String @unique
  companyName String

  stocks     Stock[]
  registries Registry[]
  orders     Order[]

  users User[] @relation("UserClients")

  @@map("client")
}

model Stock {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  warehouse    String
  nomenclature String
  article      String
  quantity     Int

  client   Client @relation(fields: [clientTIN], references: [TIN])
  clientTIN String @map("client_tin")

  @@map("stock")
}

model Registry {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  branch           String
  orderType        String   @map("order_type")
  orderNumber      String   @map("order_number")
  kisNumber        String   @map("kis_number")
  unloadingDate    DateTime @map("unloading_date")
  status           String
  counterparty     String
  acceptanceDate   DateTime @map("acceptance_date")
  shipmentPlan     DateTime @map("shipment_plan")
  packagesPlanned  Int      @map("packages_planned")
  packagesActual   Int      @map("packages_actual")
  linesPlanned     Int      @map("lines_planned")
  linesActual      Int      @map("lines_actual")

  client    Client @relation(fields: [clientTIN], references: [TIN])
  clientTIN String @map("client_tin")

  @@map("registry")
}

model Order {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  branch           String
  orderType        String   @map("order_type")
  orderNumber      String   @map("order_number")
  kisNumber        String   @map("kis_number")
  exportDate       DateTime @map("export_date")
  shipmentDate     DateTime @map("shipment_date")
  status           String
  packagesPlanned  Int      @map("packages_planned")
  packagesActual   Int      @map("packages_actual")
  linesPlanned     Int      @map("lines_planned")
  linesActual      Int      @map("lines_actual")
  counterparty     String
  acceptanceDate   DateTime @map("acceptance_date")

  client    Client @relation(fields: [clientTIN], references: [TIN])
  clientTIN String @map("client_tin")

  @@map("order")
}

enum Role {
  USER
  ADMIN
}
